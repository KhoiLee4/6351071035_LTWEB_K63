@using MvcBookStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_Layout.cshtml";
}


<div>
@foreach (var book in Model)
{
    <div class="templatemo_product_box">
        <h1>@book.Tensach</h1>
        <img src="~/Images/@book.Anhbia" alt="image" />
        <div class="product_info">
            <p>@book.Mota</p>
            <h3>@string.Format("{0:0,0}", book.Giaban) VND</h3>
            <div class="buy_now_button"><a href="@Url.Action("ThemGiohang", "GioHang", new {@iMasach = book.Masach, @strURL= Request.Url.ToString()})">Buy Now</a></div>
            <div class="detail_button"><a href="@Url.Action("Details","BookStore",new { id = book.Masach })">Detail</a></div>
        </div>
        <div class="cleaner">&nbsp;</div>
    </div>
}
</div>
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount;
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
<style>
    /* Căn chỉnh và tạo khoảng cách cho menu phân trang */
    .MenuTrang {
        text-align: center;
        margin-top: 20px;
        padding: 0;
        list-style: none;
    }

        /* Định dạng từng phần tử trong menu phân trang */
        .MenuTrang li {
            display: inline-block;
            margin: 0 5px;
        }

        /* Thiết kế các liên kết trong menu phân trang */
        .MenuTrang a {
            padding: 10px 15px;
            font-size: 16px;
            color: #007bff;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            /* Hiệu ứng khi hover vào các trang */
            .MenuTrang a:hover {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

        /* Phân biệt trang hiện tại */
        .MenuTrang .current a {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
            font-weight: bold;
        }

        /* Ẩn liên kết nếu không có trang kế tiếp hoặc trước */
        .MenuTrang .disabled a {
            color: #ccc;
            border-color: #ccc;
            cursor: not-allowed;
        }

        /* Đặt khoảng cách giữa các trang */
        .MenuTrang li a {
            display: inline-block;
            margin: 0 5px;
            text-align: center;
        }

        /* Đảm bảo liên kết không bị cắt ngắn */
        .MenuTrang a {
            min-width: 40px;
            height: 40px;
            line-height: 40px;
        }
</style>

<a href="#"><img src="~/Images/templatemo_ads.jpg" alt="ads" /></a>

